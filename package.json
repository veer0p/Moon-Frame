{
    "name": "electron-watch-together",
    "version": "1.0.0",
    "description": "Watch videos together in real-time - Desktop App",
    "main": "electron/main.js",
    "type": "module",
    "scripts": {
        "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
        "build": "vite build",
        "preview": "vite preview",
        "electron": "electron .",
        "electron:dev": "vite",
        "package": "npm run build && electron-builder"
    },
    "keywords": [
        "electron",
        "watch-together",
        "video",
        "sync",
        "real-time"
    ],
    "author": "Veer",
    "license": "MIT",
    "dependencies": {
        "@supabase/supabase-js": "^2.89.0",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "zustand": "^5.0.9"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/react": "^19.2.5",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.1",
        "concurrently": "^8.2.2",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "eslint": "^9.39.1",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.24",
        "globals": "^16.5.0",
        "vite": "^7.2.4",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.watchtogether.app",
        "productName": "Watch Together",
        "files": [
            "dist/**/*",
            "electron/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "assets",
            "output": "release"
        }
    }
}